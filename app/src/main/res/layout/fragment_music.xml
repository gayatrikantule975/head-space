<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicFragment"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Music"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkpink"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="2"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrumental Music"
                android:textSize="20sp"
                android:textColor="@color/darkpink"
                android:textStyle="bold"

                android:gravity="center_horizontal"
                android:layout_margin="8sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/instrumentalmusic"
                android:layout_margin="8sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/btnInstrumental"
                android:text="Click here to listen Music"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray"
                android:background="@drawable/shape"
                android:layout_margin="8sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180sp"
        android:layout_height="290sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="60sp"
        android:layout_marginRight="10sp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lofi Music"
                android:textSize="20sp"
                android:textColor="@color/darkpink"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_margin="8sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/lofimusic"
                android:layout_margin="8sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLofi"
                android:text="Click here to listen Music"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray"
                android:background="@drawable/shape"
                android:layout_margin="8sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        app:cardElevation="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meditation Music"
                android:textSize="20sp"
                android:textColor="@color/darkpink"
                android:textStyle="bold"

                android:gravity="center_horizontal"
                android:layout_margin="8sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/meditation"
                android:layout_margin="8sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/btnMeditation"
                android:text="Click here to listen Music"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray"
                android:background="@drawable/shape"
                android:layout_margin="8sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp"
android:layout_marginTop="15sp"
        android:layout_marginLeft="30sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deep Sleep Music"
                android:textSize="20sp"
                android:textColor="@color/darkpink"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_margin="8sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/deepsleep"
                android:layout_margin="8sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSleeping"
                android:text="Click here to listen Music"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray"
                android:background="@drawable/shape"
                android:layout_margin="8sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>
    </HorizontalScrollView>
</FrameLayout>
</ScrollView>
