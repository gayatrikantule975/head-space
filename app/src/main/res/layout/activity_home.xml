<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:weightSum="2">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/homeFrame"
        android:layout_weight="1.78"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/homeBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        app:menu="@menu/bootomnavmenu"
        android:background="@drawable/roundbottom"
        app:itemIconTint="@color/bottomcolor"
        app:itemTextColor="@color/bottomcolor"
        app:itemRippleColor="@color/pink"/>

</LinearLayout>